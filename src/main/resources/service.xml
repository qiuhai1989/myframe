    <context:component-scan base-package="com.haiqiu.*.service" />

   <bean id="categoryService" class="com.haiqiu.rest.CategoryService">

    </bean>

    <bean id="categoryDAO" class="com.haiqiu.dao.CategoryDAO">
        <!--  wire dependency-->
    </bean>


    <import resource="spring/spring-cxf.xml"/>
    <import resource="spring/spring-cxf-rest.xml"/>
    <import resource="spring/spring-mybatis.xml"/>
    <import resource="spring/spring-transaction.xml"/>
<!--    <import resource="spring/spring-schedule.xml"/>-->
</beans>